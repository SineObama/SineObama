#include <stdio.h>
#include <string.h>

int main() {
    int test, curtest;
    scanf("%d", &test);
    for (curtest = 1; curtest <= test; curtest++) {
        char s1[100] = { 0 }, s2[100] = { 0 };
        scanf("%s %s", s1, s2);
        int len1 = strlen(s1), len2 = strlen(s2), out[100] = {0}, i, cur = 0;
        for (i = len1 - 1; i >= 0; i--) {
            out[cur] = s1[i] - '0';
            cur++;
        }
        cur = 0;
        for (i = len2 - 1; i >= 0; i--) {
            out[cur] += s2[i] - '0';
            while (out[cur] > 1) {
                out[cur] -= 2;
                out[cur + 1]++;
            }
            cur++;
        }
        printf("%d ", curtest);
        i = 99;
        while (out[i] == 0) {
            i--;
        }
        while (i >= 0) {
            printf("%d", out[i--]);
        }
        putchar('\n');
    }
    return 0;
}
