#include <stdio.h>
#include <stdlib.h>
int pass[101] = { 0 }, n, comp[101] = { 0 };

int suan(int start, int num) {
    if (start >= n - 1)
        return 1;
    pass[num] = 1;
    int sum = 0, i;
    if (comp[start]) {
        i = num + 1;
        for (; i <= n; i++)
            if (!pass[i])
                sum += suan(start + 1, i);
    } else {
        i = num - 1;
        for (; i > 0; i--)
            if (!pass[i])
                sum += suan(start + 1, i);
    }
    pass[num] = 0;
    return sum;
}

int main() {
    while (scanf("%d", &n) && n != 0) {
        int i = 0, sum = 0;
        scanf("%d", &comp[0]);
        for (i = 1; i < n; i++) {
            scanf("%d", &comp[i]);
            if (comp[i - 1] > comp[i])
                comp[i - 1] = 0;
            else
                comp[i - 1] = 1;

        }
        comp[n - 1] = 0;
        for (i = 1; i <= n; i++)
            sum += suan(0, i);
        printf("%d\n", sum);
    }
    return 0;
}
